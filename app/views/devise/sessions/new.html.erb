<div class="row"> 
	<div class="span8">
		<h2>Greetings, welcome back!</h2>
		<h3>Please log in:</h3>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal well"}) do |f| %>
			<fieldset>
		  	<%= f.input :email %>
		  	<%= f.input :password %>

		  	<% if devise_mapping.rememberable? -%>
		  	 	<div><%= f.input :remember_me, as: :boolean %></div>
		 	<% end -%>

		 	 <div class="form-actions"><%= f.button :submit, "Log in" %></div>
	 		</fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>